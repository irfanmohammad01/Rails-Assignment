<p style="color: green"><%= notice %></p>

<%= render @blog %>

<p>
  <strong>Status:</strong>
  <%= @blog.published? ? "Published" : "Unpublished" %>
</p>

<div>
  <% if @blog.published? %>
    <%= button_to "Unpublish", publish_blog_path(@blog), method: :patch, form: {style: 'display:inline-block'} %>
  <% else %>
    <%= button_to "Publish", publish_blog_path(@blog), method: :patch, form: {style: 'display:inline-block'} %>
  <% end %>
</div>

<div style="margin-top: 20px; border-top: 2px solid #333; padding-top: 20px;">
  <h3>Comments</h3>
  <%= render @blog.comments %>
  
  <% if @blog.published? %>
    <h4>Add a Comment:</h4>
    <%= render 'comments/form' %>
  <% else %>
    <p><em>Comments are disabled for unpublished blogs.</em></p>
  <% end %>
</div>

<div>
  <%= link_to "Edit this blog", edit_blog_path(@blog) %> |
  <%= link_to "Back to blogs", blogs_path %>

  <%= button_to "Destroy this blog", @blog, method: :delete %>
</div>
